<h2>Edit Item</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ItemId" />
        <div class="form-group">
            <label asp-for="Sponsor.sponsorName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<input asp-for="SponsorId" class="form-control" />
                <span asp-validation-for="SponsorId" class="text-danger"></span>*@
				<select asp-for="Sponsor.sponsorName" class="form-control" asp-items="ViewBag.sponsorID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemDescription" class="form-control" />
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ItemValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemValue" class="form-control" />
                <span asp-validation-for="ItemValue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OpeningBid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OpeningBid" class="form-control" />
                <span asp-validation-for="OpeningBid" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BidIncrement" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BidIncrement" class="form-control" />
                <span asp-validation-for="BidIncrement" class="text-danger"></span>
            </div>
        </div>

        @*Drop down list for assigning multiple items to a single auction*@
		<div class="form-group">
			<label asp-for="Category.Name" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<select asp-for="Category.Name" class="form-control" asp-items="ViewBag.CategoryId"></select>
			</div>
		</div>

        <div class="form-group">
            <label asp-for="AuctionId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AuctionId" class="form-control" asp-items="ViewBag.AuctionId"></select>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

